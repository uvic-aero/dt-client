{
    "extends": ["airbnb", "prettier", "prettier/react"],

    "plugins": ["react", "prettier"],
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [".js", "jsx"]
            }
        ],
        "prettier/prettier": "error",
        "max-len": ["error", 80],
        "semi": [2, "always"]
    },
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["src"]
            }
        }
    },
    "parser": "babel-eslint"
}
